<Window
    x:Class="Question_1.AddStudentsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Student" Height="350" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <TextBlock Grid.Row="0" Text="Name:" VerticalAlignment="Center" Margin="5" />
        <TextBox Grid.Row="0" x:Name="NameTextBox" Margin="5" Width="250" />

        <TextBlock Grid.Row="1" Text="Grade:" VerticalAlignment="Center" Margin="5" />
        <ComboBox Grid.Row="1" x:Name="GradeComboBox" Margin="5" Width="250">
            <ComboBoxItem Content="A" />
            <ComboBoxItem Content="B" />
            <ComboBoxItem Content="C" />
            <ComboBoxItem Content="D" />
        </ComboBox>

        <TextBlock Grid.Row="2" Text="Subject:" VerticalAlignment="Center" Margin="5" />
        <ComboBox Grid.Row="2" x:Name="SubjectComboBox" Margin="5" Width="250">
            <ComboBoxItem Content="Programming Fundamentals" />
            <ComboBoxItem Content="Visual PRogramming" />
            <ComboBoxItem Content="Data Structures and Algorithms" />
        </ComboBox>

        <TextBlock Grid.Row="3" Text="Marks:" VerticalAlignment="Center" Margin="5" />
        <TextBox Grid.Row="3" x:Name="MarksTextBox" Margin="5" Width="250" />

        <TextBlock Grid.Row="4" Text="Attendance (%):" VerticalAlignment="Center" Margin="5" />
        <TextBox Grid.Row="4" x:Name="AttendanceTextBox" Margin="5" Width="250" />

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
